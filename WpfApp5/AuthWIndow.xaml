<Window x:Class="WpfApp5.AuthWIndow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="AuthWIndow" Height="260" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Margin="20">
            <Label Content="Логин" />
            <TextBox x:Name="LoginBox" />
            <Label Content="Пароль" />
            <PasswordBox x:Name="PasswordBox" />
            <Button x:Name="LoginBtn" Content="Авторизация" Margin="0 10 0 0" Click="LoginBtn_Click"/>
            <TextBlock x:Name="textblock" Margin="0 20 0 10" TextAlignment="Center" Text="Неверный логин или пароль" Foreground="Red" Height="25"/>
        </StackPanel>
    </Grid>
</Window>
